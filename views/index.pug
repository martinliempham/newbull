html
	head
		title Bulletin Board Application
		link(rel='stylesheet', href='/style.css')

	body
				
		h1 New Message
			div
			a(href='/new')
				button Post New Message
			a(href='/')
				button Go Home
			#messages
				-var len = Messages.length
				//- console.log(messages)
				-for(var i = 0; i < len; i++) 
					p
						.messages  #{Messages[i].title}
					p
						.messages  #{Messages[i].body}